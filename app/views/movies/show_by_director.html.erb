<% if @movies.present? && @movies.any? %>
  <h2>Other Movies by <%= @director %></h2>

  <table class="table table-striped col-md-12" id="movies">
    <thead>
      <tr>
        <th>Movie Title</th>
        <th>Rating</th>
        <th>Release Date</th>
        <th>More Info</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td>
            <%= movie.title %>
          </td>
          <td>
            <%= movie.rating %>
          </td>
          <td>
            <%= movie.release_date %>
          </td>
          <td>
            <%= link_to "More about #{movie.title}", movie_path(movie) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No other movies by <%= @director %> found.</p>
<% end %>
